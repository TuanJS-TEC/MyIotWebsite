@{
    ViewData["Title"] = "Profile";
    
    // Logic Gravatar giữ nguyên
    var email = "HoangminhtuanJS@gmail.com";
    var gravatarHash = System.Security.Cryptography.MD5.HashData(System.Text.Encoding.UTF8.GetBytes(email.Trim().ToLower()));
    var gravatarUrl = $"https://www.gravatar.com/avatar/{Convert.ToHexString(gravatarHash).ToLower()}?s=200&d=mp";
}

@section Styles {
<style>
    /* --- PHẦN MỚI: CSS CHO VIDEO BACKGROUND --- */
    .video-background-container {
        position: fixed; top: 0; left: 0;
        width: 100%; height: 100vh;
        overflow: hidden; z-index: -2;
    }
    #bg-video {
        width: 100%; height: 100%;
        object-fit: cover;
    }
    .video-overlay {
        position: fixed; top: 0; left: 0;
        width: 100%; height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Tăng độ tối để chữ/card nổi bật hơn */
        z-index: -1;
    }
    body { 
        background-color: #121212; /* Màu nền dự phòng nếu video không tải được */
    }

    /* --- CÁC STYLE CŨ --- */
    .profile-page-wrapper {
        padding: 4rem 0;
        align-items: center;
        min-height: 90vh;
        display: flex;
        justify-content: center;
    }
    /* Các thẻ card giờ có nền trong suốt và hiệu ứng kính mờ */
    .profile-card, .tech-showcase {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        padding: 2.5rem;
        height: 100%;
        color: #134686; /* Chuyển màu chữ mặc định thành trắng */
    }
    
    .profile-avatar {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid rgb(0, 49, 97);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }
    
    .user-title { color: #134686; }
    .info-item a { color: #134686; }
    .info-item i { color: #134686; }
    .tech-showcase h2 { color: #134686; }
    .tech-item h5 { color: #134686; }
    .tech-item p { color: #134686; }
    .tech-item i { color: #134686; }
    
    @@media (max-width: 991.98px) {
        .profile-card { margin-bottom: 2rem; }
    }
</style>
}

