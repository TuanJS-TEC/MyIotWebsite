@{
    ViewData["Title"] = "Profile";

    // Logic để tạo URL Gravatar từ email
    var email = "HoangminhtuanJS@gmail.com";
    var gravatarHash = System.Security.Cryptography.MD5.HashData(System.Text.Encoding.UTF8.GetBytes(email.Trim().ToLower()));
    var gravatarUrl = $"https://www.gravatar.com/avatar/{Convert.ToHexString(gravatarHash).ToLower()}?s=200&d=mp";
}

@section Styles {
<style>
    @@keyframes gradientAnimation {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    .profile-page-wrapper {
        padding: 4rem 0;
        background-color: #f5f7fa;
        background-image: linear-gradient(to top left, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .profile-card, .tech-showcase {
        background-color: rgba(255, 255, 255, 0.9); /* Thêm một chút trong suốt */
        backdrop-filter: blur(10px); /* Hiệu ứng "kính mờ" (tùy chọn) */
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        height: 100%;
    }

    .profile-card {
        text-align: center;
    }
    
    .avatar-container {
        margin-top: -95px;
        margin-bottom: 1.5rem;
    }

    .profile-avatar {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        background-color: white;
    }
    
    .user-name { 
        font-size: 1.8em; 
        font-weight: 600; 
    }
    
    .user-title { 
        color: #6c757d; 
        margin-bottom: 1.5rem; 
    }
    
    .info-item {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
        font-size: 0.95em;
    }
    
    .info-item i { 
        color: #0d6efd; 
        width: 25px; 
        margin-right: 10px; 
    }
    
    .info-item a { 
        color: #212529; 
        text-decoration: none; 
    }
    
    .info-item a:hover { 
        text-decoration: underline; 
    }

    .tech-showcase h2 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.5rem;
        font-weight: 600;
    }
    
    .tech-item { 
        display: flex; 
        align-items: center; 
        margin-bottom: 1.25rem; 
    }
    
    .tech-item i {
        font-size: 1.8rem;
        width: 45px;
        text-align: center;
        margin-right: 1rem;
        color: #0d6efd;
    }
    
    .tech-item h5 { 
        font-size: 1rem; 
        font-weight: 500;
        margin-bottom: 0.25rem; 
    }
    
    .tech-item p { 
        margin-bottom: 0; 
        font-size: 0.85rem; 
        color: #6c757d; 
    }
    
    /* Media query cho màn hình nhỏ hơn Large (992px) */
    @@media (max-width: 991.98px) {
        .profile-card {
            margin-bottom: 2rem;
        }
    }
</style>
}

<div class="profile-page-wrapper">
    <div class="container">
        <div class="row align-items-stretch">

            <div class="col-lg-5 mb-4 mb-lg-0">
                <div class="profile-card">
                    <div class="avatar-container">
                        <img src="@gravatarUrl" alt="Ảnh đại diện" class="profile-avatar">
                    </div>
                    <h1 class="user-name">Hoàng Minh Tuấn</h1>
                    <p class="user-title">B22DCCN753-HTTT05</p>
                    
                    <div class="info-container">
                        <div class="info-item">
                            <i class="fab fa-github"></i>
                            <a href="https://github.com/TuanJS-TEC" target="_blank">TuanJS-TEC</a>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:hoangminhtuanjs@email">@email</a>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-phone"></i>
                            <a href="tel:+84386008099">+84 386 008 099</a>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-rocket"></i> <a href="https://www.postman.com/mission-physicist-91554883/workspace/myiotwebsite" target="_blank">Postman Workspace</a>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-file-pdf"></i>
                            <a href="~/documents/Báo_Cáo_BÀI_03_HoangMinhTuan.pdf" target="_blank">Xem Báo cáo Tổng quan</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="tech-showcase">
                    <h2>Công nghệ Sử dụng</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="tech-item">
                                <i class="fa-solid fa-server"></i>
                                <div>
                                    <h5>Backend Framework</h5>
                                    <p>ASP.NET Core</p>
                                </div>
                            </div>
                            <div class="tech-item">
                                <i class="fa-solid fa-database"></i>
                                <div>
                                    <h5>Cơ sở dữ liệu</h5>
                                    <p>PostgreSQL</p>
                                </div>
                            </div>
                            <div class="tech-item">
                                <i class="fa-solid fa-wifi"></i>
                                <div>
                                    <h5>Real-time</h5>
                                    <p>SignalR</p>
                                </div>
                            </div>
                            <div class="tech-item">
                                <i class="fa-brands fa-bootstrap"></i>
                                <div>
                                    <h5>Giao diện</h5>
                                    <p>Bootstrap 5</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="tech-item">
                                <i class="fa-solid fa-code"></i>
                                <div>
                                    <h5>Ngôn ngữ</h5>
                                    <p>C# (C Sharp)</p>
                                </div>
                            </div>
                            <div class="tech-item">
                                <i class="fa-solid fa-right-left"></i>
                                <div>
                                    <h5>Giao thức IoT</h5>
                                    <p>MQTT</p>
                                </div>
                            </div>
                            <div class="tech-item">
                                <i class="fa-solid fa-chart-line"></i>
                                <div>
                                    <h5>Biểu đồ</h5>
                                    <p>Chart.js</p>
                                </div>
                            </div>
                            <div class="tech-item">
                                <i class="fa-solid fa-microchip"></i>
                                <div>
                                    <h5>Thiết bị IoT</h5>
                                    <p>ESP32</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

